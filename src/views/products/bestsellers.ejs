<!DOCTYPE html>
<html lang="en">

<%- include("../parcials/head", {stylesheet: ["stylehome", "nl-b"]}) %>

    <body>
        <%- include("../parcials/header"); %>
        <main>
          <h1 class="title-h1">Bestsellers</h1>
            <div class="box-ebooks">
                <% for(let i=0; i < bestseller.length; i++){ %>
                    <article>
                      <div class="ebook">
                       <a href="/products/<%= bestseller[i].id %>"><img src="/img/products/<%= bestseller[i].imagen %>"
                          alt="<%= bestseller[i].titulo %>" class="imagen-ebook"></a>
                       <p class="ebook-title">
                          <%= bestseller[i].titulo %>
                       </p>
                    </div>
                    </article>
                <% } %>
              </div>
        </main>
            <%- include("../parcials/footer"); %>
    </body>

</html>