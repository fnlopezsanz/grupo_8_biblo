<header>
    <div class="top-header">
      <div class="burger">
        <form action="" method="">
          <button type="menu"><i class="fas fa-bars"></i></button>
        </form>
      </div>
      <div class="search-top">
        <form action="" method="">
          <input type="text" placeholder="Buscar...">
          <button type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
      <nav class="top-nav">
        <ul>
          <li><a href="#">Novedades</a></li>
          <li><a href="#">Más vendidos</a></li>
          <li><a href="#">Editoriales</a></li>
        </ul>
      </nav>
      <a href="/"><img src="/img/vistas/logo.jpg" alt="logo" class="logo"></a>
    </div>
    <div class="bottom-header">
      <div class="search-bottom">
        <form action="" method="">
          <input type="text" placeholder="Buscar..." size="15">
          <button type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
      <nav class="bottom-nav">
        <ul>
          <% if(locals.isLogged) { %>
            <li><a href="#" class="profile-box"><img class='profile' src="/img/users/<%= locals.userLogged.avatar %>" alt=""><p style="font-size: 15px;"><%= locals.userLogged.nombre %></p></a></li>
            <% } else { %>
              <li><a href="/users/register">Creá tu cuenta</a></li>
              <li><a href="/users/login">Iniciar sesión</a></li>
              <% } %>
              <li><i class="fas fa-book"></i><a href="/users/carrito">MI CARRITO</a></li>
            <% if (locals.isLogged) { %>
              <li>
                <form action="/users/logout" method="get">
                  <button type="submit" class="logout"><i class="fas fa-sign-out-alt"></i></button>
                  </form>
              </li>
            <% } %>
        </ul>
      </nav>
    </div>
  </header>